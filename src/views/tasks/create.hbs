<div class="w-1/3 mx-auto my-12 p-8 bg-white border border-gray-200 rounded-lg shadow-lg text-gray-800">
  <h1 class="text-center text-3xl font-bold">Create task</h1>

  <form action="" method="post" class="mt-4">

    <input type="text" placeholder="Task title" name="title"
      class="border-2 border-gray-600 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white outline-none focus:border-green-500">

    <textarea name="description" placeholder="Task description"
      class="border-2 border-gray-600 rounded-md bg-gray-200 w-full h-40 text-lg placeholder-gray-500 p-2 my-2 focus:bg-white outline-none focus:border-green-500"></textarea>

    <button type="submit"
      class="rounded-md  bg-green-500 w-full text-lg text-white font-semibold p-2 hover:bg-green-600">Send</button>

  </form>
</div>